    "NamedProfiles": {
      "Empty": {
        "Format": ""
      },
      "Remove": {
        "Format": "REMOVE" //todo not supported now
      },
      "PeronsalAccountNumber": {
        "ValuePattern": "\\d{15,16}",
        "Format": "L4*?R4"
      },
      "DOB": {
        "Key": [ "DOB", "DateOfBirth" ],
        "Format": ""
      },
      "Name": {
        "Format": "L2*?,10"
      },
      "Email": {
        "Format": "L2*@",
        "Description": "email is special, that it will be separated by '@' to two parts. use normal format for these two part separately"
      }
    },
    "Items": {
      "Pan": "Named:Pan",
      "FirstName": "Named:Name",
      "LastName": "Named:Name",
      "Email": "Named:Email",
      "Password": {
        "Format": "*"
      },
      "PhoneNumber": "L6*"
